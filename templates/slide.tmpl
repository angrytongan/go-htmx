{{block "slide-page" .}}
  {{template "head" .}}
  {{template "nav" .}}

  {{template "slide" .}}

  <button name="direction"
          value="Prev"
          hx-get="/slide/go"
          hx-trigger="click"
          hx-target="previous div"
          hx-swap="outerHTML transition:true">Prev</button>
  <button name="direction"
          value="Next"
          hx-get="/slide/go"
          hx-trigger="click"
          hx-target="previous div"
          hx-swap="outerHTML transition:true">Next</button>

  {{template "foot" .}}
{{end}}

{{block "slide" .}}
  <div class="slide-{{.Direction}}">
    {{range 5}}
      <p>this is page {{$.Page}}</p>
    {{end}}
  </div>
{{end}}
